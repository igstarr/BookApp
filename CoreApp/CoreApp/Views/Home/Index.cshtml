@model BookViewModelList;
@{
    ViewData["Title"] = "Home Page";
}




<div class="max-w-3xl mx-auto py-6 sm:px-6 lg:px-8 justify-center">
    <div>
        <ul>
            @foreach (var book in Model.BooksList)
            {
                <li class="border-b-2 mb-2">
                    <div class="flex items-center justify-between">
                        <div class="text-sm font-medium text-indigo-600 truncate">
                            @book.Name
                        </div>
                        <div class="ml-2 flex-shrink-0 flex">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Add
                            </span>
                        </div>
                    </div>
                    <div class="mt-2 mb-2 flex justify-between">
                        <div class="sm:flex">
                            <div class="mr-6 flex items-center text-sm text-gray-500">
                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" x-description="Heroicon name: solid/users" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
                                </svg>
                                @book.AuthorName
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <vc:paging sort-filter-page-data="Model.SortFilterPageData"></vc:paging>
</div>


